{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "module": "CommonJS",
    "target": "esnext",
    "jsx": "react-jsx",
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": { "*": ["./src/*"] },

    "lib": ["dom", "esnext"],
    "sourceMap": true
  },
  "ts-node": { "compilerOptions": { "module": "CommonJS" } },
  "exclude": ["node_modules"]
}
